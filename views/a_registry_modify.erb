<article>
  <h2>Add a Registry</h2>

  <form class="form-horizontal" role="form" method="POST" action="/admin/registry-add">
    <div class="form-group">
      <label style="font-size: 120%" class="col-sm-2 control-label" for="registry-name">Registry:</label>
      <div class="col-sm-10">
        <input class="form-control" type="number" name="name" id="registry-name" placeholder="Registry Number"></input>
      </div>
    </div>
    <button class="btn btn-success btn-mid pull-right" type="submit">Add Registry</button>
  </form>
  <h2>Registries</h2>
  <h4><small style="margin-left: 20px; color: rgb(255, 92, 51)">Beware: Deleting a Registry will delete all users in it</small></h4>
  <% registry.each do |registry| %>
  <form class="form-horizontal" method="POST" action="/admin/registry-delete">
    <div class="panel panel-info">
      <div class="panel-heading clearfix">
        <button class="btn btn-danger btn-sm pull-right" type="submit">Delete Registry</button>
        <h4><%= registry.name %></h4>
      </div>
      <div class="panel-body">
        <h4>Users: <small style="color: #000"></small></h4>
        <% registry.users.each do |user| %>
        <span><%= user.username %></span>
        <% end %>
      </div>
    </div>
  </form>
  <% end %>
</article>