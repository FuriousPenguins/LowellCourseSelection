<article>
    <h2>Add a Class Name</h2>
    <h4><small style="margin-left: 20px">Example: AP Human Geography or AP Physics 1A</small></h4>
    <form class="form-horizontal" role="form" method="POST" action="/admin/subject-add">
      <div class="form-group">
        <div class="col-sm-12">
          <label style="font-size: 120%" for="category-list">Select the Category which the class falls under:</label>
          <select class="form-control" id="category-list">
            <option>Select a Category</option>
            <% Category.each do |category| %>
            <option><%= category.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
        <label style="font-size:120%" for="subject-name">Name of Class:</label>
        <input class="form-control" type="text" name="name" id="subject-name" placeholder="AP Psychology"></input>
        </div>
      </div>
      <button class="btn btn-success btn-lg pull-right" type="submit">Add Class Name</button>
    </form>
</article>